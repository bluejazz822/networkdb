# Network CMDB Production Environment Configuration
# This file should be stored outside the Docker images and mounted at runtime

# Database Configuration
DB_HOST=172.16.30.62
DB_PORT=44060
DB_NAME=mydatabase
DB_USER=root
DB_PASSWORD=XXXXX

# Backend Configuration
NODE_ENV=production
PORT=3301

# Frontend Configuration
FRONTEND_URL=http://localhost:80

# Security Configuration
# IMPORTANT: Replace these with secure, randomly generated secrets before deployment
# Generate with: openssl rand -base64 32
SESSION_SECRET=CHANGE_ME_TO_SECURE_RANDOM_STRING
JWT_SECRET=CHANGE_ME_TO_SECURE_RANDOM_STRING

# Security Headers
HSTS_MAX_AGE=31536000
CSP_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'"
# Logging Configuration
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGINS=http://localhost:80,http://localhost:3000

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30

# Application Configuration
APP_NAME=Network CMDB
APP_VERSION=1.0.0

# Cache Configuration (if needed for future enhancements)
CACHE_TTL=300

# Rate Limiting (if needed for future enhancements)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# N8n Integration Configuration
N8N_BASE_URL=http://172.16.30.60:5678
N8N_API_KEY=

# Email Configuration (for alerts)
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@networkdb.local

# Monitoring and Metrics
ENABLE_METRICS=true
METRICS_PORT=9090

# Performance Configuration
DB_CONNECTION_LIMIT=10
DB_CONNECTION_TIMEOUT=10000
DB_POOL_TIMEOUT=30000

# File Upload Configuration
MAX_FILE_SIZE=50MB
UPLOAD_PATH=/app/uploads

# Backup Configuration
BACKUP_RETENTION_DAYS=7
BACKUP_SCHEDULE=0 2 * * *
