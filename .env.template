# Network CMDB Environment Configuration Template
# Copy this file to .env.production and .env.staging, then fill in the actual values

# Database Configuration
DB_HOST=your-database-host
DB_PORT=your-database-port
DB_NAME=your-database-name
DB_USER=your-database-user
DB_PASSWORD=your-database-password

# Backend Configuration
NODE_ENV=production
PORT=3001

# Frontend Configuration
FRONTEND_URL=http://localhost:80

# Security Configuration (Generate a secure random string)
SESSION_SECRET=your-super-secure-session-secret-minimum-32-characters

# Logging Configuration
LOG_LEVEL=info

# CORS Configuration (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:80,http://localhost:3000

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30

# Application Configuration
APP_NAME=Network CMDB
APP_VERSION=1.0.0

# Cache Configuration (seconds)
CACHE_TTL=300

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100